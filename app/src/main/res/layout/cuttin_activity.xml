        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_oval_hairlined" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_oval_hairlined"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_waving_hand_24" />
            </FrameLayout>
        </FrameLayout>

        <ImageButton
            android:id="@+id/color"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_oval_hairlined"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_color_lens_24"
            tools:tint="#FF0000" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="16dp">

            <ImageButton
                android:id="@+id/capture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_oval_hairlined"
                android:padding="8dp"
                android:src="@drawable/bg_oval_filled"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_oval_hairlined"
                android:padding="4dp"
                android:rotation="45"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_circle_24"
                android:visibility="visible" />
        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/shape"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_oval_hairlined"
            android:padding="12dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_add_circle_outlined_24" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:visibility="invisible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="4dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_oval_hairlined"
                    android:padding="4dp"
                    android:scaleType="centerInside" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
