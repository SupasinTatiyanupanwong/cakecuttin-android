    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CuttinActivity"
    tools:ignore="ContentDescription"
    tools:layout_marginBottom="56dp"
    tools:layout_marginTop="24dp">

    <dev.supasintatiyanupanwong.libraries.android.kits.ads.banner.BannerAdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.camera.view.PreviewView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <dev.supasintatiyanupanwong.apps.android.cakecuttin.CuttinOverlay
            android:id="@+id/cuttin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" />
    </FrameLayout>

